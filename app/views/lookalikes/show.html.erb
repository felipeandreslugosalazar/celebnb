<div class="container show-page">
  <div class="row">
    <div class="col-md-6 celeb-img">
      <%= cl_image_tag @lookalike.photo.key, height: 400, width: 400, crop: :fill %>
    </div>
    <div class="col-md-6 main-div">
      <div class="rating-section">
        <p class="rating-quote">"It was incredible!!! 🥳🤗"</p>
        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>
      </div>
      <div class="rating-section">
        <p class="rating-quote">"Best surprise for my mum!!!"</p>
        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
      </div>
      <div class="rating-section">
        <p class="rating-quote">"Finally I met my idol 💪🏽"</p>
        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
      </div>
      <div class="book-section">
        <p><strong>Price per hour: </strong><%= @lookalike.price %>€</p>
        <p><%= link_to "Book #{@lookalike.celeb_name}", new_lookalike_booking_path(@lookalike), class: "btn-standard" %></p>
        <p class="amount-bookings"><strong>89</strong> people booked <%= @lookalike.celeb_name %> already</p>
      </div>
    </div>
  </div>
  <div class="desc-section">
    <h1><%= @lookalike.celeb_name %></h1>
    <p class="desc"><strong>About myself: </strong><%= @lookalike.description %></p>
  </div>
</div>