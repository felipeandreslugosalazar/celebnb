<h2 class="new-lookalike-title">Create your Look-alike</h2>

<%= simple_form_for(@lookalike) do |f| %>

  <div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      
    <div class="new-looklike-form-inputs">    
      <%= f.text_field :celeb_name, placeholder: "Name" %>
      <br>
      <%= f.text_field :description, placeholder: "Description" %>
      <br>
      <%= f.text_field :price, placeholder: "Price" %>
    </div>

    <br>

    <div class ="photo-upload">
      <%= f.file_field :photo %>
    </div>

    <br>
        
    <div class="new-lookalike-form-actions">
      <%= f.button :submit %>
    </div>

  </div>

  <div class="return">
    <p>- or -</p>
    <%= link_to "Return to all lookalikes", lookalikes_path %>
  </div>

<% end %>
