<h1>Browse Lookalikes</h1>
<div>
  <ul>
    <% @lookalikes.each do |lookalike| %>
      <div>
        <li><%= link_to lookalike.celeb_name, lookalike_path(lookalike) %></li>
        <% if lookalike.photo.attached? %>
          <%= cl_image_tag lookalike.photo.key, height: 100, crop: :fill %>
        <% end %>
      </div>
    <% end %>
  </ul>
</div>

<p><%= link_to "Create your own look-alike", new_lookalike_path() %></p>

